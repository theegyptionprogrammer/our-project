<?xml version="1.0" encoding="utf-8"?>
<GridLayout  xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainActivity">

    <Button
            android:drawableLeft="@drawable/ic_settings_black_24dp"
            android:id="@+id/setting" android:layout_width="54dp" android:layout_row="0" android:layout_column="2"/>
    <EditText
            android:id="@+id/waterCount" android:layout_row="1" android:layout_column="1" android:layout_width="290dp"/>
    <TextView
            android:id="@+id/water" android:layout_height="52dp" android:layout_width="91dp" android:layout_row="2"
            android:layout_column="1" tools:text="water" android:textSize="30sp"  android:layout_marginLeft="100dp"/>
    <Button
            android:id="@+id/confirm" android:layout_row="2" android:layout_column="1" android:layout_marginLeft="200dp"
            android:text="confirm"/>
    <view class="android.support.v7.app.AlertController$RecycleListView" android:layout_row="3"
          android:layout_column="1" android:layout_height="387dp" android:layout_width="290dp"
          android:textColor="@color/colorPrimary">

    </view>
    <Button
            android:id="@+id/statistics" android:layout_row="4" android:layout_column="2" android:layout_width="54dp"
            android:drawableLeft="@drawable/ic_trending_down_black_24dp"/>
</GridLayout>